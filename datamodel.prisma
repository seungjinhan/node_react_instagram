type User {
  id: ID! @id @unique
  username: String! @unique
  email: String! @unique
  firstName: String @default( value:"")
  lastName: String
  bio: String
  followers: [User!] @relation( name: "FollowRelation")
  following: [User!] @relation( name: "FollowRelation")
  posts: [Post!]
  likes: [Like!]
  comments: [Comment!]
  rooms:[Room!]
}

type Post{
  id: ID! @id @unique
  files:[File!]!
  location: String
  user: User!
  caption: String!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like{
  id: ID! @id @unique
  user: User!
  post: Post!
}

type Comment{
  id: ID! @id @unique
  text: String!
  user: User!
  post: Post!
}

type File{
  id: ID! @id @unique
  url: String!
  post: Post!
}

type Room{
  id: ID! @id @unique
  participants: [User!]!
  messages:[Message!]!
}

type Message{
  id: ID! @id @unique
  text:String!
  from:[User!]! @relation( name: "From")
  to:[User!]! @relation( name: "To")
  room: Room!
}